<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="YouTube Uploader" Width = "400" Height = "200"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="200"
        x:Class="Uploader.SettingsWindow">

    <Grid>
        <TextBox x:Name="ClientIdBox" Width="150" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"
                 Watermark="Client ID" FontSize="14"/>
        <TextBox x:Name="ClientSecretBox" Width="150" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0"
                 Watermark="Client Secret" FontSize="14"/>

        <Button Name="WriteCredentials" Content="Write Credentials" Width="50" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,90,0,0"
                FontSize="14" Click="WriteCredentials_Click"/>


</Grid>
</Window>